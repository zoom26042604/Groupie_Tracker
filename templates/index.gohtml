<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>POSTIFY</title>
    <link rel="stylesheet" href="/static/css/style.css">
    <link rel="stylesheet" href="/static/css/searchbar.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=search" />
</head>
<body>
<img  class="text" src="/static/img/TEXT LOGO.PNG" alt="logo" >
<img  class="logo" src="/static/img/POSTIFY.png" alt="logo" >

<table>
    <thead>
    <tr>
        <th><a href="/">Acceuil</a></th>
        <th><a href="/homePage">Artists</a></th>
        <th><a href="/about">About</a></th>
        <th><a href="/search">Search</a></th>
    </tr>
    </thead>
</table>
<ul>
    {{range .Artists}}
        <li>
            <a href="/artist/{{.ID}}">
                <img src="{{.Image}}" alt="Artist cover">
                <div class="artist-info">
                    <h3>{{.Name}}</h3>
                </div>
            </a>
        </li>
    {{end}}
</ul>
<form action="/search" method="GET">
    <div class="search">
        <span class="material-symbols-outlined"> search </span>
        <input class="search-input" type="search" name="query" placeholder="search" oninput="showSuggestions(this.value)">
        <div class="suggestions" id="suggestions"></div>
    </div>
</form>
<script>
    function showSuggestions(query) {
        let suggestionsDiv = document.getElementById('suggestions');
        if (query.length < 1) {
            suggestionsDiv.innerHTML = '';
            return;
        }

        fetch('/suggestions?query=' + encodeURIComponent(query))
            .then(response => response.text())
            .then(html => {
                suggestionsDiv.innerHTML = html;
            });
    }
</script>
</body>
</html>