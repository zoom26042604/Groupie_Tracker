<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Filter</title>
    <link rel="stylesheet" href="/static/css/filter.css">
    <script>
        function updateRangeValue(inputId, displayId) {
            var input = document.getElementById(inputId);
            var display = document.getElementById(displayId);
            display.textContent = input.value;
        }
    </script>
</head>
<body>
<h1>Filter Page</h1>
<form method="GET" action="/filter">
    <input type="text" name="search" placeholder="Search for an artist ...">
    <div>
        <label>Creation Date:</label>
        <div class="slidecontainer">
            <input type="range" id="creation_date" name="creation_date" min="1950" max="2025" value="1987,5" class="slider" oninput="updateRangeValue('creation_date', 'creation_date_value')">
            <span id="creation_date_value">1987</span>
        </div>
    </div>
    <input type="date" name="first_album_date" placeholder="First Album Year" min="1900" max="2100">
    <div>
        <label>Number of Members:</label>
        <div>
            <input type="checkbox" name="members" value="1"> 1
            <input type="checkbox" name="members" value="2"> 2
            <input type="checkbox" name="members" value="3"> 3
            <input type="checkbox" name="members" value="4"> 4
            <input type="checkbox" name="members" value="5"> 5
            <input type="checkbox" name="members" value="6"> 6
            <input type="checkbox" name="members" value="7"> 7
        </div>
    </div>
    <input type="text" name="location" placeholder="Location of Concerts">
    <button type="submit">Search</button>
</form>
<div id="results">
    {{range .Artists}}
        <div class="artist">
            <h2>{{.Name}}</h2>
        </div>
    {{end}}
</div>
</body>
</html>